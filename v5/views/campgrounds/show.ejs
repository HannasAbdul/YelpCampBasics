<%- include ('../partials/header') %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">yelpCamp</p>
            <div class="list-group">
                    <li class="list-group-item active">Info 1</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <h3>Welcome To <%= campgrounds.name %></h3>
            <div class="thumbnail">
                <img class="img-responsive" src="<%- campgrounds.image%>" class="img-responsive">
                <div class="caption-full">
                    <h4 class="pull-right">$9 dollars a night</h4>
                    <a><h4><%= campgrounds.name.toUpperCase()%></h4></a>
                    <hr>
                    <p><%- campgrounds.description %></p> 

                </div>
            </div>
            <div class="well">
                <div class="text-right">
                        <a class="btn btn-success btn-sm" href="/campgrounds/<%= campgrounds._id %>/comments/new">Add New</a>
                </div>
                <hr>
                <% campgrounds.comments.forEach(function(comment){ %>
                    <div class="row">
                        <div class="col-md-12">
                            <strong>
                                <%= comment.author %>
                            </strong>
                            <span class="pull-right"><%= new Date().getDate() %> Days Ago</span>
                            <p>
                                <%= comment.text %>
                            </p>
                       </div>
                    </div>
                    <hr>
                <% }) %>
                
            </div>
        </div>

    </div>
</div>
<%- include ('../partials/footer') %>