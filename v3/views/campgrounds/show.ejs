<%- include ('../partials/header') %>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h3>Welcome To <%= campgrounds.name %></h3>
        </div>
    </header>
    <div class="row text-center">
        <div class="thumbnail">
            <img src="<%- campgrounds.image%>" class="img-responsive">
            <h4><%= campgrounds.name.toUpperCase()%></h4>
            <a href="/campgrounds/<%- campgrounds._id %>/edit" class="btn btn-primary btn-sm">Edit</a>
            <a href="#" class="btn btn-danger btn-sm">Delete</a>

        </div>
        
    </div>
    <p><%- campgrounds.description %></p>
    <p>
        <a class="btn btn-success btn-sm" href="/campgrounds/<%= campgrounds._id %>/comments/new">Add New</a>
    </p>
    <% campgrounds.comments.forEach(function(comment){ %>
        <p><strong><%= comment.author %> </strong>-<%= comment.text %></p>
    <% }) %>

</div>
    

<%- include ('../partials/footer') %>